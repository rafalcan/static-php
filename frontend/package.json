{
  "name": "static-php",
  "version": "1.0.0",
  "description": "Static PHP Heroku",
  "author": "rafalcan - Rafael Gomes Alcantara",
  "scripts": {
    "serve": "cross-env NODE_ENV=development webpack-dev-server",
    "serve:prod": "cross-env NODE_ENV=staging webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "deploy": "npm run build && git push heroku master",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.0",
    "autoprefixer": "^9.4.7",
    "cross-env": "^5.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.11.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4"
  },
  "dependencies": {
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "core-js": "^3.1.4",
    "css-loader": "^2.1.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-replace-webpack-plugin": "^2.5.5",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^4.6.0",
    "imports-loader": "^0.8.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "6.5.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.2",
    "url-loader": "^1.1.2",
    "vanilla-lazyload": "^12.0.0",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.2.0",
    "webpack-merge": "^4.2.1"
  },
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie <= 10",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  }
}
